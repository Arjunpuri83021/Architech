<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../../admin/css/adminstyle.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <%- include('../../partials/admin/menu.ejs')%>

 
  <section style="background-color: #ffff;" class="home-section">
    <div class="home-content">
      <i class='bx bx-menu'></i>
      <span class="text"> Qury Reply Panel</span>
      
    </div>
    <div>
        <h5 class="text-center" style="color: blue;">Qury reply</h5>

        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <form action="/admin/quaryreplyadmin/<%=record.id%>" method="post" enctype="multipart/form-data">
                        <label class="mt-3" for="">Your email</label>
                        <input style="height: 50px;"  type="email" name="email" id="" class="form-control" value="<%=record.email%>">
                        <label class="mt-3" for="">Your Subject</label>
                        <input style="height: 50px;"  type="text" name="sub" id="" class="form-control" value=" Reply: <%=record.sub%>">
                        <label class="mt-3" for="">Your message</label>
                        <textarea style="height: 130px;"  name="body" class="form-control"></textarea>
                        <label class="mt-3" for="">Attachment</label>
                        <input class="form-control" type="file" name="img" id="">
                        <button style="height: 50px; width: 120px; font-size: 20px; font-weight: bold;"  type="submit" class="btn btn-danger mt-3">Submit</button>
                    </form>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    
        
       
         
           
            

        
        
        
    
  </section>

  

  <script>
    let arrow = document.querySelectorAll(".arrow");
for (var i = 0; i < arrow.length; i++) {
  arrow[i].addEventListener("click", (e)=>{
 let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
 arrowParent.classList.toggle("showMenu");
  });
}

let sidebar = document.querySelector(".sidebar");
let sidebarBtn = document.querySelector(".bx-menu");
console.log(sidebarBtn);
sidebarBtn.addEventListener("click", ()=>{
  sidebar.classList.toggle("close");
});
  </script>
  
</body>
</html>